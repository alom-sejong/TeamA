<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceScreen
        android:key="select_business"
        android:title="업종 선택"
        android:summary="메인화면에 표시할 업종 선택">
        <SwitchPreference
            android:defaultValue="false"
            android:key="business_1"
            android:title="카페"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="business_2"
            android:title="식당"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="business_3"
            android:title="영화"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="business_4"
            android:title="교통"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="business_5"
            android:title="놀이공원"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="business_6"
            android:title="마트"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="business_7"
            android:title="소셜커머스"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="business_8"
            android:title="해외이용"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="business_9"
            android:title="기타"/>
    </PreferenceScreen>
    <PreferenceScreen
        android:key="select_brand"
        android:title="브랜드 선택"
        android:summary="메인화면에 표시할 브랜드 선택">
        <PreferenceCategory
            android:title="카페"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="brand_1_1"
            android:title="스타벅스"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="brand_1_2"
            android:title="스타벅스"/>
        <MultiSelectListPreference
            android:entries="@array/brand_1"
            android:entryValues="@array/brand_1"/>
        <PreferenceCategory
            android:title="식당"/>
        <MultiSelectListPreference
            android:entries="@array/brand_2"/>
        <PreferenceCategory
            android:title="영화"/>
        <MultiSelectListPreference
            android:entries="@array/brand_3"/>
        <PreferenceCategory
            android:title="교통"/>
        <MultiSelectListPreference
            android:entries="@array/brand_4"/>
        <PreferenceCategory
            android:title="마트"/>
        <MultiSelectListPreference
            android:entries="@array/brand_5"/>
        <PreferenceCategory
            android:title="편의점"/>
        <MultiSelectListPreference
            android:entries="@array/brand_6"/>
        <PreferenceCategory
            android:title="놀이공원"/>
        <MultiSelectListPreference
            android:entries="@array/brand_7"/>
        <PreferenceCategory
            android:title="소셜커머스"/>
        <MultiSelectListPreference
            android:entries="@array/brand_8"/>
    </PreferenceScreen>

</PreferenceScreen>